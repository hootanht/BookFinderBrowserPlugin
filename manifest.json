{
  "manifest_version": 3,
  "name": "Book Finder",
  "version": "1.0",
  "description": "Book Finder Browser Plugin",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [{
    "resources": ["popup.js"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 